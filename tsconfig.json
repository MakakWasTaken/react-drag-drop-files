{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "./src",
    "baseUrl": ".",

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    "strict": true,

    "skipLibCheck": true,
    "noImplicitAny": true,

    "incremental": true,

    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "useUnknownInCatchVariables": false,
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "ES2022"],
    "forceConsistentCasingInFileNames": true,

    "jsx": "react-jsx",

    "composite": true
  },
  "exclude": ["node_modules", "dist", "tests"]
}
